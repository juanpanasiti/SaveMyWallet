<h2>Impuestos </h2>
<%= link_to icon('fas','plus-circle','Nuevo Impuesto'), new_tax_path, class: "btn btn-success" %>
<table class="table table-hover table-striped" id="table-taxes">
  <thead>
    <tr>
      <th>Factura</th>
      <th>Monto</th>
      <th>Vencimiento</th>
      <th>Estado</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @taxes.each do |tax| %>
    <tr>
      <td class="center-text-v"><%= tax.name %></td>
      <td class="center-text-v"><%= number_to_currency tax.amount %></td>
      <td class="center-text-v"><%= tax.exp_date.strftime("%d/%m/%Y") %></td>
      <td class="center-text-v"><%= tax.status %></td>
      <td class="center-text-v">
        <div class="btn-group" role="group" >
          <%= link_to icon('fas','trash'), tax_path(tax), method: :delete, class: "btn btn-danger", data: { confirm: "Esta acciÃ³n no se puede deshacer!!" } %>
          <%= link_to icon('fas','edit'), edit_tax_path(tax), class: "btn btn-warning" %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
  <script type="text/javascript">
  $(document).ready(function(){
    $('#table-taxes').DataTable( {
      responsive: true
    } );
  });
  </script>
</table>
